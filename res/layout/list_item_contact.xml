<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical" >
	
	    <ImageView 
	        android:id="@+id/contact_availability"
	        android:scaleType="centerCrop"
	        android:layout_width="40dip"
	        android:layout_height="40dip"
	        android:layout_marginLeft="10dip"/>  
	    
	    <RelativeLayout 
		    android:layout_width="match_parent" 
		    android:layout_height="65dip"
		    android:gravity="center_vertical" > 
		    
		    <TextView
		        android:id="@+id/contact_name" 
		        android:layout_width="wrap_content"
		       	android:layout_height="35dip" 
		       	android:layout_alignParentTop="true"
		       	android:layout_alignParentLeft="true"
		       	android:layout_above="@+id/contact_extension"
		       	android:textIsSelectable="false"
		       	android:textSize="21sp"
		       	android:paddingLeft="10dip"
		       	android:gravity="bottom"/>
		    
		     <TextView
		        android:id="@+id/contact_extension"
		        android:layout_width="wrap_content"
		       	android:layout_height="30dip"
		       	android:layout_alignParentBottom="true"
		       	android:layout_alignParentLeft="true"
		       	android:textIsSelectable="false"
		       	android:textSize="16sp"
				android:alpha="0.7"
		       	android:paddingLeft="10dip"
		       	android:gravity="top"/>
		     
		     <!-- For future use. Invisible unless status line exists -->
		     <TextView
		        android:id="@+id/contact_status_line"
		        android:layout_width="100dip"
		       	android:layout_height="match_parent"
		       	android:layout_alignParentRight="true"
		       	android:layout_centerVertical="true"
		       	android:gravity="right|center_vertical"
		       	android:textSize="15sp"
		       	android:paddingRight="10dip"
		       	android:alpha="0.85"
		       	android:visibility="gone"/>
		     
	    </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/toolbar"
		android:layout_marginBottom="-40dip"
		android:paddingTop="5dip"
		android:paddingBottom="5dip"
		android:paddingLeft="10dip"
		android:visibility="gone"
		android:layout_height="40dip"
		android:layout_width="fill_parent"
		android:background="#55999999"
		android:orientation="horizontal">
	    <Button
			android:id="@+id/call_button"
			android:layout_width="wrap_content"
			android:layout_height="30dip"
			android:layout_marginRight="10dip"
			android:drawableLeft="@drawable/ic_menu_call_light"
			android:background="@drawable/list_selector_holo_light"
			android:textStyle="bold"
			android:textSize="12sp"
			android:text="@string/call_capital"
	        />
	    
	    <include layout="@layout/divider_vertical"/>
	    <Button
			android:id="@+id/transfer_button"
			android:layout_width="wrap_content"
			android:layout_height="30dip"
			android:layout_marginLeft="10dip"
			android:drawableLeft="@drawable/ic_menu_forward"
			android:background="@drawable/list_selector_holo_light"
			android:textStyle="bold"
			android:textSize="12sp"
			android:text="@string/transfer_capital"
	        />
	    
	    
	</LinearLayout>

</LinearLayout>