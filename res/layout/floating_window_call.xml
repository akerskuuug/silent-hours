<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="0dip"
    android:alpha="0.9">
    
     <Button  
		android:id="@+id/close_button"
		android:layout_height="40dip" 
		android:layout_width="40dip" 
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
        android:padding="5dip"
		android:drawableTop="@drawable/navigation_cancel"
		android:background="@drawable/list_selector_holo_light"
		android:gravity="center"
		/>   
	
    <ImageView
        android:id="@+id/call_image"
        android:layout_width="60dip"
        android:layout_height="65dip"
        android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:padding="10dip"
	    android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/call_status_in_c"
        android:gravity="center_vertical"/>
    
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
       	android:layout_height="35dip"
		android:layout_alignParentTop="true"
       	android:layout_toRightOf="@+id/call_image"
       	android:textStyle="bold"
       	android:textSize="18sp"
       	android:gravity="bottom"/>
    
     <TextView
        android:id="@+id/contact_extension"
        android:layout_width="wrap_content"
       	android:layout_below="@+id/contact_name"
       	android:layout_toRightOf="@+id/call_image"
       	android:layout_height="30dip"
       	android:textSize="15sp"
       	android:gravity="top"/>
     
     <!-- Used to save the call ID for easy access. Not visible and should not be altered. -->
     <TextView
        android:id="@+id/call_id"
        android:layout_width="0dip"
       	android:layout_height="0dip"
       	android:visibility="gone"/>
     
    
   	<View 
	    android:id="@+id/divider3"
		android:layout_width="match_parent" 
		android:layout_height="1dip" 
		android:layout_below="@+id/contact_extension"
		android:background="#EEEEEE"/>

    <Button  
		android:id="@+id/answer_button"
		android:layout_height="match_parent"
		android:layout_width="match_parent" 
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/divider"
		android:layout_below="@+id/divider3"
		android:layout_margin="0dip"
		android:background="@drawable/list_selector_holo_light"
		android:text="@string/call_popup_answer"
       	android:textSize="18sp"
		android:visibility="gone"
		android:gravity="center"
		/>
    
     <Button  
		android:id="@+id/resume_button"
		android:layout_height="match_parent"
		android:layout_width="match_parent" 
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/divider"
		android:layout_below="@+id/divider3"
		android:layout_margin="0dip"
		android:background="@drawable/list_selector_holo_light"
		android:text="@string/call_popup_resume"
       	android:textSize="18sp"
		android:visibility="gone"
		android:gravity="center"
		/>
    
    <Button  
		android:id="@+id/hold_button"
		android:layout_height="match_parent"
		android:layout_width="match_parent" 
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/divider"
		android:layout_below="@+id/divider3"
		android:layout_margin="0dip"
		android:background="@drawable/list_selector_holo_light"
		android:text="@string/call_popup_hold"
       	android:textSize="18sp"
		android:gravity="center"/>
    <View 
	    android:id="@+id/divider"
		android:layout_width="1dip" 
		android:layout_height="match_parent"
		android:layout_below="@+id/divider3"
		android:layout_toLeftOf="@+id/transfer_button"
		android:background="#EEEEEE"/>
     <Button  
		android:id="@+id/transfer_button"
		android:layout_height="match_parent"
		android:layout_width="100dip" 
		android:layout_below="@+id/divider3"
		android:layout_margin="0dip"
		android:layout_centerHorizontal="true"
		android:background="@drawable/list_selector_holo_light"
		android:text="@string/call_popup_transfer"
       	android:textSize="18sp"
		android:gravity="center"/>
   <View 
	    android:id="@+id/divider2"
		android:layout_width="1dip" 
		android:layout_height="match_parent"
		android:layout_below="@+id/divider3"
		android:layout_toRightOf="@+id/transfer_button"
		android:background="#EEEEEE"/>
	<Button 
		android:id="@+id/reject_button"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_below="@+id/divider3"
		android:layout_alignParentRight="true"
		android:layout_toRightOf="@+id/divider2"
		android:layout_margin="0dip"
		android:background="@drawable/list_selector_holo_light"
		android:text="@string/call_popup_hangup"
       	android:textSize="18sp"
		android:gravity="center"
		/>
	
   	<View 
	    android:id="@+id/divider4"
		android:layout_width="match_parent" 
		android:layout_height="1dip" 
		android:layout_below="@+id/divider"
		android:background="#EEEEEE"/>

</RelativeLayout>