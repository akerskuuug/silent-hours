<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >
    <ImageView 
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_main"
        android:scaleType="centerInside"/>
    
    <View
        android:id="@+id/voicemail_bg"
        android:layout_height="60dip" 
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
	   	android:background="#dddddd"
        /> 
		
    <Button 
        android:id="@+id/voicemail_button"
        android:layout_height="60dip"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
	    android:background="@drawable/list_selector_holo_light"
	    android:gravity="center"
	    android:drawableBottom="@drawable/device_access_mic"
        android:text="@string/new_voicemail"
        />		
  
    <View 
	    android:id="@+id/divider_horizontal"
		android:layout_width="match_parent" 
		android:layout_height="1dip"   
        android:layout_below="@+id/voicemail_button"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:background="#c6c6c6"/> 	     
    <TextView 
        android:id="@+id/call_header"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="0dip"
        android:layout_below="@+id/divider_horizontal"
        android:text="@string/active_calls"
        android:textSize="16sp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:gravity="left|center_vertical"
        android:background="@drawable/abs__ab_solid_shadow_holo" 
        />
    
   	<ListView 
        android:id="@+id/call_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/call_header"
        android:layout_marginBottom="0dip"
        android:choiceMode="singleChoice"
        android:footerDividersEnabled="true"
        android:gravity="center"
        android:background="@drawable/abs__ab_solid_shadow_holo" />    
        
    <Button 
        android:id="@+id/call_history_header"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="0dip"
        android:layout_below="@+id/call_list"
        android:text="@string/call_history"
        android:textSize="16sp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:gravity="left|center_vertical"
        android:background="@drawable/abs__ab_solid_shadow_holo" 
        />
    <ListView 
        android:id="@+id/call_list_history"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_centerHorizontal="true"
       	android:layout_below="@+id/call_list"
       	android:layout_marginTop="40dip"
       	android:layout_above="@+id/divider_horizontal2"
       	android:headerDividersEnabled="true"
        android:choiceMode="singleChoice" 
        android:gravity="center"
        android:background="@drawable/abs__ab_solid_shadow_holo" />   
        
    <View 
	    android:id="@+id/divider_horizontal2" 
		android:layout_width="match_parent" 
		android:layout_height="1dip"   
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_above="@+id/shortcut_scroller"
		android:background="#c6c6c6"/> 	
		
	<HorizontalScrollView 
	    android:id="@+id/shortcut_scroller"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	   	android:layout_above="@+id/divider_horizontal_middle"
	   	android:scrollbars="none"
	   	android:background="#dddddd">
	   	<LinearLayout 
	   	    android:id="@+id/shortcut_container"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:gravity="center"
	   	    android:orientation="horizontal"/>
    </HorizontalScrollView>
    
    <View 
	    android:id="@+id/divider_horizontal_middle"
		android:layout_width="match_parent" 
		android:layout_height="1dip"   
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_above="@+id/bottom_buttons"
		android:background="#c6c6c6"/> 	
			
   <LinearLayout 
       android:id="@+id/bottom_buttons"
       android:layout_height="50dip"
       android:layout_width="match_parent"
       android:layout_above="@+id/divider_horizontal_bottom"
       android:orientation="horizontal"
       android:gravity="center_horizontal"
       android:weightSum="2"
       android:background="#dddddd">
       
	       
	   <Button 
	        android:id="@+id/status_button"
	        android:layout_height="match_parent"
	        android:layout_width="0dp" 
	        android:layout_weight="1"
	        android:gravity="center"
	        android:background="@drawable/list_selector_holo_light"
	        android:textSize="17sp"/> 
	    <View 
		    android:id="@+id/divider_vertical"
			android:layout_width="1dip" 
			android:layout_height="30dip" 
			android:layout_marginTop="10dip"
			android:layout_marginBottom="10dip"
			android:background="#c6c6c6"/> 	
	  
	   <ToggleButton 
	        android:id="@+id/availability_toggle_button"
	        android:layout_height="match_parent" 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:textOn="@string/mex_logout"
	        android:textOff="@string/mex_login"
	        android:background="@drawable/list_selector_holo_light"
	        android:gravity="center"
	        android:textSize="17sp"/> 
	  
	   	
		    
    </LinearLayout>	
    <View 
	    android:id="@+id/divider_horizontal_bottom"
		android:layout_width="match_parent" 
		android:layout_height="1dip"   
       	android:layout_alignParentBottom="true"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:background="#c6c6c6"/> 	
</RelativeLayout>